# name: test/sql/ai_performance.test
# description: Performance tests for LLaMA extension functions
# group: [sql]

require ai

# Test 1: Rapid Status Function Calls
statement ok
SELECT trex_ai_status() FROM range(100);

statement ok
SELECT trex_ai_gpu_info() FROM range(50);

statement ok  
SELECT trex_ai_list_loaded() FROM range(100);

# Test 2: Concurrent Function Calls
query I
SELECT COUNT(*) FROM (
    SELECT trex_ai_status() AS status,
           trex_ai_gpu_info() AS gpu_info,
           trex_ai_list_loaded() AS loaded
    FROM range(10)
) WHERE status IS NOT NULL AND gpu_info IS NOT NULL AND loaded IS NOT NULL;
----
10

# Test 3: Memory Usage with Large String Inputs
statement ok
SELECT trex_ai(repeat('test_', 10000));

# Test 4: Function Call Latency (Basic Timing)
statement ok
SELECT 
    trex_ai_status(),
    trex_ai_gpu_info(),
    trex_ai_list_loaded()
FROM range(20);

# Test 5: Error Handling Performance
# Test that error cases don't cause performance degradation
statement ok
SELECT COUNT(*) FROM range(50) WHERE 
    (SELECT trex_ai_unload_model('non_existent_model_' || i) FROM range(1) t(i)) IS NULL;

# Test 6: Basic Performance Test
# Test function calls in a loop
query I
SELECT COUNT(*) FROM range(10) WHERE trex_ai_status() IS NOT NULL;
----
10

# Test 7: String Processing Performance
# Test with various string lengths
statement ok
SELECT trex_ai(repeat('x', i * 100)) FROM range(1, 11) t(i);

# Test 8: Batch Operations
# Simulate processing multiple requests
statement ok
SELECT 
    COUNT(*) as call_count,
    COUNT(DISTINCT trex_ai_status()) as distinct_statuses
FROM range(100);

# Test 9: Resource Cleanup Validation
# Ensure repeated calls don't accumulate resources
statement ok  
WITH RECURSIVE resource_test(i) AS (
    SELECT 1
    UNION ALL
    SELECT i + 1 FROM resource_test 
    WHERE i < 50
)
SELECT COUNT(*) FROM resource_test WHERE trex_ai_status() IS NOT NULL;

# Test 10: Stress Test - Mixed Function Calls
query I
SELECT COUNT(*) FROM (
    SELECT 
        CASE (i % 4)
            WHEN 0 THEN trex_ai_status()
            WHEN 1 THEN trex_ai_gpu_info()  
            WHEN 2 THEN trex_ai_list_loaded()
            ELSE trex_ai('stress_test_' || i)
        END as result
    FROM range(200) t(i)
) WHERE result IS NOT NULL;
----
200
